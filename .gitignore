# WordPress - ignore core, configuration, examples, uploads, and logs.
# https://github.com/github/gitignore/blob/main/WordPress.gitignore

# Core WordPress files
/wp-admin/
/wp-content/index.php
/wp-content/languages
/wp-content/plugins/index.php
/wp-content/themes/index.php
/wp-includes/
/index.php
/license.txt
/readme.html
/wp-*.php
/xmlrpc.php

# Configuration
wp-config.php

# Example themes (ignore default WP themes)
/wp-content/themes/twenty*/

# Example plugin (ignore default Hello Dolly plugin)
/wp-content/plugins/hello.php

# Uploads folder
/wp-content/uploads/

# Log files
*.log

# htaccess file
/.htaccess

# All themes (ignore all themes)
wp-content/themes/

# Ignore all plugins except "sharp-plugin"
wp-content/plugins/*
!wp-content/plugins/sharp-plugin/

# Ignore macOS .DS_Store files
.DS_Store

# Ignore local xdebug info file
local-xdebuginfo.php
